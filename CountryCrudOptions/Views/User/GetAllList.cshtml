@model IEnumerable<User>;


<div class="container">
    <div class="row align-items-center">
        @if (TempData["UserError"] != null)
        {
            <div class="alert-danger danger-notification text-center"> @TempData["UserError"] </div>
        }
        @if (TempData["UserSuccess"] != null)
        {
            <div class="alert-info danger-notification text-center"> @TempData["UserSuccess"] </div>
        }
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title badge-soft-primary">
                    Contact List
                </h5>
            </div>
        </div>

        <div class="col-md-6">
            <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                <div>
                    <a class="btn btn-primary" asp-action="AddUser" asp-controller="User">Add new </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table project-list-table align-middle table">
                        <thead>
                            <tr>
                                <th scope="col" class="ps-4" style="width: 50px;">

                                    <div class="form-check font-size-16"><input type="checkbox" class="form-check-input" id="contacusercheck" /><label class="form-check-label" for="contacusercheck"></label></div>

                                </th>
                                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                                <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
                                <th scope="col">@Html.DisplayNameFor(x => x.Gender)</th>
                                <th scope="col">@Html.DisplayNameFor(x => x.PinCode)</th>
                                <th scope="col">@Html.DisplayNameFor(x => x.PhoneNumber)</th>
                                <th scope="col" style="width: 200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row" class="ps-4">
                                        @if (item.isActive)
                                        {
                                            <div class="form-check font-size-16"><input asp-for="@item.isActive" disabled type="checkbox" class="form-check-input" id="contacusercheck1" /><label class="form-check-label" for="contacusercheck1"></label></div>

                                        }
                                        else
                                        {
                                            <div class="form-check font-size-16"><input asp-for="@item.isActive" type="checkbox" class="form-check-input" id="contacusercheck1" /><label class="form-check-label" for="contacusercheck1"></label></div>
                                        }
                                    </th>

                                    <td><span class="badge badge-soft-success mb-0">@item.Name</span></td>
                                    <td>@item.Email</td>
                                    <td>@item.Gender</td>
                                    <td>@item.PinCode</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <a asp-action="UpdateUser" asp-controller="User" class="btn btn-outline-primary m-1" asp-route-id="@item.Id">Edit</a>
                                        <a asp-action="UpdateUser" asp-controller="User" class="btn btn-outline-info m-1" asp-route-id="@item.Id">Details</a>
                                        <a asp-action="DeleteUser" asp-controller="User" class="btn btn-outline-danger m-1" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
